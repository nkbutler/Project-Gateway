extends home

block groupNav
  - var urlBase = '/group/' + page.group.id + '-' + page.group.name;
  li: a(href=urlBase) About
  li.active: a(href=urlBase + '/members') Members
  li: a(href=urlBase + '/projects') Projects

block groupContent
  h1 #{page.group.name}'s Members
  hr
  if users
    .panel.panel-default
      table.table
        tr
          th Username
          th Joined
          th &nbsp;
        each user in users
          tr
            td: a(href='/user/' + user.username) #{user.username}
            td #{user.joined}
            td &nbsp;

