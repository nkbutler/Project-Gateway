extends layout

block content
  .container
    .col-md-3
      h3 #{page.user.username}
      hr
      ul.nav.nav-pills.nav-stacked
        li.active: a(href='/user/' + page.user.username) Profile
        li: a(href='/user/' + page.user.username + '/groups') Groups
        li: a(href='/user/' + page.user.username + '/projects') Projects
    .col-md-9
      block groupContent
        h1 Your Profile
        hr




  h1= page.group.name
  h3= '"' + page.group.slogan + '"'
  .container
      .well.col-md-6
        h3 Add user to a Group
        hr
        form#adduser(method='POST', action='/groups/#{page.group.id}-#{page.group.name}')
          .form-group
            label.hidden-xs(for='targetuser') User to Add
            input.form-control#targetuser(type='text', name='targetuser', placeholder='Enter a user to add')= forms.adduser.data$
          .form-group
            button.btn.btn-default Add
  .container
      .well.col-md-6
        h1 Create a Project
        hr
        form#createproject(method='POST', action='/groups/#{page.group.id}-#{page.group.name}')
          .form-group
            label.hidden-xs(for='pname') Name for Project
            input.form-control#pname(type='text', name='pname', placeholder='Enter a name for your project')= forms.createproject.data$
          .form-group
            label.hidden-xs(for='descrip') Description for Project
            input.form-control#descrip(type='text', name='descrip', placeholder='Enter a short description of your project')
          .form-group
            button.btn.btn-default Create
        a(href='/logout') Logout
