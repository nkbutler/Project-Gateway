extends baseLayout
block body
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target="#nav-collapse")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Project Gateway
      div#nav-collapse.collapse.navbar-collapse
        .navbar-right
          if session.user
            p.navbar-text.
              Signed in as #[a.navbar-link(href='/user/')= session.user.username] (#[a.navbar-link(href='/logout') Sign out])
            ul.nav.navbar-nav
              li: a(href='/user/') Profile
              li: a(href='/user/groups') Groups
              li: a(href='/user/projects/') Projects
          else
            p.navbar-text.
              #[a.navbar-link(href='/login') Log in] or #[a.navbar-link(href='/login') Register]
  block content
