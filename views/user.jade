extends layout

block content
  if !session.user || session.user.username != page.user.username
    h1= page.user.username
  else
    h1= session.user.username
    .container
      .well.col-md-6
        h1 Create a Group
        hr
        form#creategroup(method='POST', action='/users/#{page.user.username}')
          .form-group
            label.hidden-xs(for='name') Name for Group
            input.form-control#name(type='text', name='name', placeholder='Enter a name for your group')= forms.creategroup.data$
          .form-group
            label.hidden-xs(for='descrip') Description for Group
            input.form-control#descrip(type='text', name='descrip', placeholder='Enter a short description of your group')
          .form-group
            label.hidden-xs(for='slogan') Motto for Group
            input.form-control#slogan(type='text', name='slogan', placeholder='Enter the motto of your group')
          .form-group
            button.btn.btn-default Create
    a(href='/logout') Logout
